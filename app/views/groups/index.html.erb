<div>
  <h3>Groups</h3>
  <%= render 'f.group' %>
</div>

  <br>

<% @groups.each do |g| %>
<div class="group">

    <hr>

  <h3><%= g.name %></h3>
  <h4><em><%= g.description %></em></h4>
  <%= link_to 'Edit', edit_group_path(g) %> /
  <%= link_to 'Delete', g, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this group?' } %>

    <br><br>

  <ul class="locations">
  <% @locations.each do |l| %>
    <li>
      <h4><%= l.name %></h4>
      <%= l.address %>
        <br>
      <em><%= l.description %></em>
    </li>
  <% end %>
  </ul>

    <br>

</div>
<% end %>
