<!-- Group Form -->
<div>
  <h3>Groups +</h3>
  <%= render 'f.group' %>
</div>

  <br>

<% @groups.each do |g| %>
<div class="group">

    <hr>

  <!-- Group Name -->
  <h3><%= g.name %></h3>
  <h4><em><%= g.description %></em></h4>
  <%= link_to 'Edit', edit_group_path(g) %> /
  <%= link_to 'Delete', g, method: :delete, data: { confirm: 'Are you sure you want to permanently delete this group?' } %>

    <br>

  <!-- Group Location Form -->
  <hr>
  <h4><%= g.name %> Locations +</h4>
  <%= form_for [g, @location] do |f| %>
    <%= f.text_field :name, placeholder: 'Name' %><br>
    <%= f.text_field :address, placeholder: 'Address' %><br>
    <%= f.text_field :description, placeholder: 'Description' %><br>
      <br>
    <%= f.submit 'Add' %>
  <% end %>

  <br>

  <!-- Group Locations -->
  <ul class="locations">
  <% g.locations.each do |l| %>
    <li>
      <h4><%= l.name %></h4>
      <%= l.address %>
        <br>
      <em><%= l.description %></em>
        <br>
      <%= link_to 'Edit', edit_group_location_path(g, l) %> /
      <%= link_to 'Delete', group_location_path(g, l), method: :delete, data: { confirm: 'Are you sure you want to permanently delete this location?' } %>

    </li>
  <% end %>
  </ul>

    <br>

</div>
<% end %>
