<div style="color: red;">
  <h1>TESTING: GROUPS</h1>
  <h2>(delete groups#index later)</h2>
</div>

<!-- Display Groups List -->
<% @groups.sort_by{ |alpha| alpha.name.downcase }.each do |g| %>
<hr>
<div class="group">

  <!-- Display Group Name -->
  <h3><%= g.name %></h3>
  <h4><em><%= g.description %></em></h4>
  <%= link_to 'Edit', edit_group_path(g) %> /
  <%= link_to 'Delete', g, method: :delete, data: { confirm: "Permanently delete #{g.name}?" } %>

  <!-- Display Group Locations -->
  <ul class="locations">
  <% g.locations.sort_by{ |alpha| alpha.name.downcase }.each do |l| %>
    <li>
      <h4><%= l.name %></h4>
      <%= l.address %>
        <br>
      <em><%= l.description %></em>
        <br>
      <%= link_to 'Edit', edit_group_location_path(g, l) %> /
      <%= link_to 'Delete', group_location_path(g, l), method: :delete, data: { confirm: "Permanently delete #{l.name}?" } %>
    </li>
  <% end %>
  </ul>

    <br>

</div>
<% end %>
