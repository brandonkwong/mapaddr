<body class="<%= params[:controller] %>_controller">

  <!-- Login -->
  <%= render 'partials/login' %>

  <!-- Navbar -->
  <%= render 'partials/navbar' %>
  
  <!-- Content -->
  <div class="container-fluid">
    <%= yield %>
  </div>

</body>
</html>
